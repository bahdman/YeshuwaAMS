@model IEnumerable<Course>

<h1>Course List</h1>
<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">

            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <div class="card-body">
                            <p class="card-text">@item.Name</p>
                            <p class="card-text">@item.CourseCode</p>
                            <p class="card-text">@item.Unit</p>
                            <p class="card-text">@item.Lecturer</p>
                            <p class="card-text">@item.CourseCategory</p>
                            <form asp-action="Delete" asp-route-id="@item.Id">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this Course?')">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>