<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Yeshuwa</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  @*   <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> *@
  @*   <link rel="stylesheet" href="~/src.styles.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="~/CustomCss/index.css" asp-append-version="true" />
</head>
<body>
    <div class="dashboardMainContainer flex">
        <div class="menuPanel">
            <div class="menuPanelContent">
                <div class="profile">
                    <div class="profilePhoto">
                        <img src="~/ASSETS/profile.png" alt="">
                    </div>
                    <p class="blueTxt">20GHUJ099</p>
                </div>

                <div class="menuItems">
                    <ul class="menu flex column">
                        <li class="flex"><div class="iconSz24"><img src="~/ASSETS/Category.png" alt="icon"></div><a class="blueTxt capitalize" asp-controller="Dashboard" asp-action="Index">dashboard</a></li>
                        <li class="flex"><div class="iconSz24"><img src="~/ASSETS/user.png" alt="icon"></div><a class="blueTxt capitalize" href="#">profile</a></li>
                        <li class="flex"><div class="iconSz24"><img src="~/ASSETS/announcement.png" alt="icon"></div><a class="blueTxt capitalize" href="#">announcements</a></li>
                        <li class="flex"><div class="iconSz24"><img src="~/ASSETS/courseReg.png" alt="icon"></div><a class="blueTxt capitalize" href="#">course registration</a></li>
                        <li class="flex"><div class="iconSz24"><img src="~/ASSETS/calendar.png" alt="icon"></div><a class="blueTxt capitalize" href="#">view results</a></li>
                        <li class="flex highlight"><div class="iconSz24"><img src="~/ASSETS/note-text.png" alt="icon"></div><a class="blueTxt capitalize" asp-action="GenerateInvoice" asp-controller="Dashboard">pay fees</a></li>
                        <li class="flex"><div class="iconSz24"><img src="~/ASSETS/calendar.png" alt="icon"></div><a class="blueTxt capitalize" href="#">transfer form</a></li>
                        <li class="flex"><div class="iconSz24"><img src="~/ASSETS/note-text.png" alt="icon"></div><a class="blueTxt capitalize" href="#">siwes placement</a></li>
                        <li class="flex"><div class="iconSz24"><img src="~/ASSETS/note-text.png" alt="icon"></div><a class="blueTxt capitalize" href="#">submit complaint</a></li>
                        <li class="flex"><div class="iconSz24"><img src="~/ASSETS/note-text.png" alt="icon"></div><a class="blueTxt capitalize" href="#">lecturer review</a></li>
                        <li class="flex"><div class="iconSz24"><img src="~/ASSETS/logout.png" alt="icon"></div><a class="blueTxt capitalize" href="#">log out</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="dashboard">
            <div class="panel flex">
                <div class="schoolNameLogo flex center">
                    <div class="logo">
                        <img src="~/ASSETS/logo.png" alt="">
                    </div>
                    <h1 class="blueTxt capitalize">university of yeshua</h1>
                </div>

                <div class="panelIcons flex center">
                    <div class="notificationIcon iconSz36"><img src="~/ASSETS/notifications.png" alt="icon"></div>
                    <div class="settingsIcon iconSz36"><img src="~/ASSETS/settings.png" alt="icon"></div>
                </div>
            </div>

            <div class="overviewPanel">
                <div class="navigation flex">
                    <div class="navigationName flex">
                        <h6 class="capitalize lgtBlueTxt">dashboard</h6>
                        <div class="arrowIcon"><img src="~/ASSETS/arrow.png" alt="icon"></div>
                        <h6 class="capitalize whtTxt">overview</h6>
                    </div>

                    <div class="course">
                        <h6 class="capitalize whtTxt">Programme: <span>B.Sc Communication And Information Science</span></h6>
                    </div>
                </div>

                <div class="userOverview">
                    <div class="userDetails flex center">
                        <h1 class="capitalize whtTxt">Welcome, Makkiya Dunnis Samuel</h1>
                        <div class="lastVisited">
                            <h6 class="capitalize whtTxt">@DateTime.Now.ToString("ddd MMM dd yyyy")</h6>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - src - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
